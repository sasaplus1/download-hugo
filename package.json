{
  "name": "download-hugo",
  "description": "download Hugo binary",
  "version": "1.0.0",
  "author": "sasa+1 <sasaplus1@gmail.com>",
  "bin": {
    "download-hugo": "./download-hugo"
  },
  "dependencies": {
    "download": "^8.0.0"
  },
  "devDependencies": {
    "eslint": "^7.5.0",
    "eslint-config-prettier": "^7.0.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^3.1.4",
    "husky": "^4.2.5",
    "lint-staged": "^10.2.11",
    "prettier": "^2.0.5"
  },
  "engines": {
    "node": ">=12",
    "yarn": ">=1.22"
  },
  "eslintConfig": {
    "env": {
      "es6": true
    },
    "extends": [
      "eslint:recommended",
      "plugin:node/recommended-script",
      "plugin:prettier/recommended"
    ],
    "root": true
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "license": "MIT",
  "lint-staged": {
    "download-hugo": "eslint --cache"
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "none"
  },
  "private": true,
  "readmeFilename": "README.md",
  "renovate": {
    "extends": [
      "config:base",
      ":automergeAll",
      ":label(renovate)",
      ":preserveSemverRanges",
      ":assignee(sasaplus1)",
      ":timezone(Asia/Tokyo)",
      "group:linters"
    ]
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/sasaplus1/download-hugo.git"
  }
}
